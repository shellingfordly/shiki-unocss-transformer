{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "types": ["@shikijs/core"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "preserveValueImports": false,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.mjs"]
}
